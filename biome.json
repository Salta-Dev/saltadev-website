{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "files": {
    "includes": [
      "saltadev/**/*.{js,css,html}",
      "!!saltadev/static/**/*.min.*",
      "!!saltadev/tailwind/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "complexity": {
        "noImportantStyles": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "html": {
    "parser": {
      "interpolation": true
    },
    "formatter": {
      "lineWidth": 120
    }
  }
}
