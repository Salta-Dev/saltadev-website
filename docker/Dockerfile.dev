FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

COPY pyproject.toml uv.lock ./
RUN uv sync --frozen --no-dev

COPY saltadev/ ./saltadev/

ENV DJANGO_SETTINGS_MODULE=saltadev.settings.development

RUN uv run python saltadev/manage.py collectstatic --noinput

EXPOSE 8000

CMD ["uv", "run", "gunicorn", "saltadev.wsgi:application", "--bind", "0.0.0.0:8000", "--workers", "2", "--chdir", "saltadev"]
