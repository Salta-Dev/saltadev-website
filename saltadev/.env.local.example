DJANGO_SETTINGS_MODULE=saltadev.settings.local
SECRET_KEY=django-insecure-local-development-key-change-this-in-production

# Database (PostgreSQL via Docker)
# Ejecutar: docker compose -f docker/docker-compose.local.yml up -d
DATABASE_URL=postgresql://saltadev:saltadev@localhost:5432/saltadev_local

# Cache (Redis via Docker)
REDIS_URL=redis://localhost:6379/0

# Email (para desarrollo local)
# Opción 1: SMTP (Gmail)
EMAIL_HOST_USER=test@example.com
EMAIL_HOST_PASSWORD=test-password

# Opción 2: Resend (HTTP API) - Usar si SMTP está bloqueado (ej: Render.com free tier)
# Obtener API key en: https://resend.com
# RESEND_API_KEY=re_xxx
# DEFAULT_FROM_EMAIL=noreply@tudominio.com  # Debe ser dominio verificado en Resend

# reCAPTCHA (keys de test de Google)
